@{
    ViewData["Title"] = "Sales Records";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-3 control-label">Min Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-3 control-label" >Max Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <br />
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-3 control-label">Min Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-3 control-label">Max Date</label>
                    <div class="col-lg-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>